<body align="center">
  <p id="notice"><%= notice %></p>



  <table align="center" border="1" cellpadding="10" cellspacing="0" width="700">
    <thead  >
      <tr>
        <th colspan="11" align="centre"><h1>----------学生信息-------------</h1></th>
      </tr>
      <tr>
        <th>编号</th>
        <th>头像</th>
        <th>姓名</th>
        <th>性别</th>
        <th>学号</th>
        <th>联系方式</th>
        <th>联系地址</th>
        <th>备注</th>
        <th colspan="3" align="centre">编辑</th>
      </tr>
    </thead>

    <tbody>
      <% @students_infos.each do |students_info| %>
        <tr>
          <td><%= students_info.id %></td>
          <td><%= image_tag(students_info.picture) %></td>
          <td><%= students_info.name %></td>
          <td><%= students_info.sex %></td>
          <td><%= students_info.number %></td>
          <td><%= students_info.phone %></td>
          <td><%= students_info.address %></td>
          <td><%= students_info.sign %></td>
          <td><%= link_to '详情', students_info %></td>
          <td><%= link_to '修改', edit_students_info_path(students_info) %></td>
          <td><%= link_to '删除', students_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to '添加学生信息', new_students_info_path %>
  <%= link_to '返回首页', root_path %>
</body>
