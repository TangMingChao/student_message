<body align="center">
  <p id="notice"><%= notice %></p>

  <h1>～》班级相册《～</h1>

  <table align="center">
    <thead>
      <tr>
        <th>相片标题</th>
        <th>相片描述</th>
        <th>相片</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @photos.each do |photo| %>
        <tr>
          <td><%= photo.title %></td>
          <td><%= photo.description %></td>
          <td><%= image_tag(photo.picture) %></td>
          <td><%= link_to '详情', photo %></td>
          <td><%= link_to '修改', edit_photo_path(photo) %></td>
          <td><%= link_to '删除', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to '上传相片', new_photo_path %>
  <%= link_to '返回首页', root_path %>
</body>
