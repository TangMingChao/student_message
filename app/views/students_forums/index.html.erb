<body lign="center">
  <p id="notice"><%= notice %></p>

  <table align="center" border="1" cellpadding="10" cellspacing="0" >
    <thead>
      <tr>
        <th colspan="2"><%= link_to '新建话题', new_students_forum_path  %></th>
        <th colspan="5"><%= link_to '返回首页', root_path %></th>
      </tr>
      <tr>
        <th colspan="7">
          <h1>学生论坛</h1>
        </th>
      </tr>
      <tr>
        <th>主题</th>
        <th>描述</th>
        <th>赞数</th>
        <th>点赞</th>
        <th colspan="3">编辑</th>
      </tr>
    </thead>

    <tbody>
      <% @students_forums.each do |students_forum| %>
        <tr>
          <td><%= students_forum.title %></td>
          <td><%= students_forum.description %></td>
          <td><%= students_forum.votes.count %></td>
          <td><%= button_to '投票',upvote_students_forum_path(students_forum),method: :post  %></td>
          <td><%= link_to '详情', students_forum %></td>
          <td><%= link_to '修改', edit_students_forum_path(students_forum) %></td>
          <td><%= link_to '删除', students_forum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</body>
