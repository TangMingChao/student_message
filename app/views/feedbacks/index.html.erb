<body align="center">
  <p id="notice"><%= notice %></p>





  <table align="center" border="1" cellpadding="10" cellspacing="0" >

    <thead>
      <tr>
        <th colspan="2"><%= link_to '新建意见反馈', new_feedback_path %></th>
        <th colspan="2"><%= link_to '返回首页', root_path %></th>
      </tr>
      <tr>
        <th colspan="4"><h3>意见显示</h3></th>
      </tr>
      <tr>
        <th>编号</th>
        <th>反馈内容</th>
        <th>反馈者</th>
        <th colspan="3">操作</th>
      </tr>
    </thead>

    <tbody>
      <% @feedbacks.each do |feedback| %>
        <tr>
          <td><%= feedback.id %></td>
          <td><%= feedback.content %></td>
          <td><%= @user_name %></td>
          <td><%= link_to '删除', feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>



</body>
